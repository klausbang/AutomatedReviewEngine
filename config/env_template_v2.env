# Automated Review Engine - Environment Variables Template
# Copy this file to .env and customize as needed

# Environment Configuration
ARE_ENVIRONMENT=development
ARE_DEBUG_MODE=false
ARE_VERSION=0.2.2

# Database Configuration
ARE_DATABASE_TYPE=sqlite
ARE_DATABASE_HOST=localhost
ARE_DATABASE_PORT=5432
ARE_DATABASE_NAME=automated_review_engine
ARE_DATABASE_USERNAME=
ARE_DATABASE_PASSWORD=
ARE_DATABASE_CONNECTION_TIMEOUT=30
ARE_DATABASE_POOL_SIZE=5

# File Handling Configuration
ARE_FILES_UPLOAD_DIRECTORY=data/uploads
ARE_FILES_TEMP_DIRECTORY=data/temp
ARE_FILES_MAX_FILE_SIZE_MB=50
ARE_FILES_ALLOWED_EXTENSIONS=.pdf,.docx
ARE_FILES_CLEANUP_TEMP_FILES=true
ARE_FILES_TEMP_FILE_RETENTION_HOURS=24

# Document Processing Configuration
ARE_PROCESSING_PDF_EXTRACTION_METHOD=dual
ARE_PROCESSING_EXTRACT_IMAGES=false
ARE_PROCESSING_EXTRACT_METADATA=true
ARE_PROCESSING_EXTRACT_STRUCTURE=true
ARE_PROCESSING_LANGUAGE_DETECTION=true
ARE_PROCESSING_OCR_ENABLED=false
ARE_PROCESSING_MAX_PROCESSING_TIME_MINUTES=10

# Validation Configuration
ARE_VALIDATION_ENABLE_SECURITY_CHECKS=true
ARE_VALIDATION_ENABLE_CONTENT_VALIDATION=true
ARE_VALIDATION_ENABLE_COMPLIANCE_CHECKING=true
ARE_VALIDATION_MALWARE_SCANNING=false
ARE_VALIDATION_MAX_VALIDATION_TIME_MINUTES=5
ARE_VALIDATION_STRICT_MODE=false

# Logging Configuration
ARE_LOGGING_LEVEL=INFO
ARE_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ARE_LOGGING_FILE_ENABLED=true
ARE_LOGGING_FILE_PATH=logs/application.log
ARE_LOGGING_FILE_MAX_SIZE_MB=10
ARE_LOGGING_FILE_BACKUP_COUNT=5
ARE_LOGGING_CONSOLE_ENABLED=true
ARE_LOGGING_STRUCTURED_LOGGING=false

# User Interface Configuration
ARE_UI_STREAMLIT_PORT=8501
ARE_UI_STREAMLIT_HOST=localhost
ARE_UI_THEME=default
ARE_UI_PAGE_TITLE=Automated Review Engine
ARE_UI_PAGE_ICON=ðŸ“‹
ARE_UI_LAYOUT=wide
ARE_UI_SIDEBAR_STATE=expanded

# Security Configuration
ARE_SECURITY_ENABLE_AUTHENTICATION=false
ARE_SECURITY_SESSION_TIMEOUT_MINUTES=30
ARE_SECURITY_MAX_LOGIN_ATTEMPTS=3
ARE_SECURITY_ENABLE_AUDIT_LOGGING=true
ARE_SECURITY_REQUIRE_HTTPS=false
ARE_SECURITY_CORS_ENABLED=false

# Performance Configuration
ARE_PERFORMANCE_MAX_CONCURRENT_UPLOADS=5
ARE_PERFORMANCE_MAX_CONCURRENT_PROCESSING=3
ARE_PERFORMANCE_MEMORY_LIMIT_MB=1024
ARE_PERFORMANCE_ENABLE_CACHING=true
ARE_PERFORMANCE_CACHE_DIRECTORY=data/cache
ARE_PERFORMANCE_CACHE_EXPIRY_HOURS=24

# Custom Settings
ARE_CUSTOM_REGULATORY_FRAMEWORK=EU Medical Devices Regulation
ARE_CUSTOM_DEFAULT_LANGUAGE=en
ARE_CUSTOM_ENABLE_EXPERIMENTAL_FEATURES=false

# Development Settings (for development environment only)
# Uncomment these for development/testing
# ARE_DEBUG_MODE=true
# ARE_LOGGING_LEVEL=DEBUG
# ARE_VALIDATION_STRICT_MODE=true
# ARE_CUSTOM_ENABLE_EXPERIMENTAL_FEATURES=true

# Production Settings (for production environment)
# Uncomment these for production deployment
# ARE_ENVIRONMENT=production
# ARE_DEBUG_MODE=false
# ARE_SECURITY_ENABLE_AUTHENTICATION=true
# ARE_SECURITY_REQUIRE_HTTPS=true
# ARE_LOGGING_STRUCTURED_LOGGING=true
# ARE_VALIDATION_MALWARE_SCANNING=true
